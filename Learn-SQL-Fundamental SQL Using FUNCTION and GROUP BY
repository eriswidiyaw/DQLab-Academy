======================================Fundamental SQL Using FUNCTION and GROUP BY=============================================
______________________________________________________________________________________________________________________________

-----Fungsi Skalar Matematika - ABS()(https://academy.dqlab.id/main/livecode/171/336/1606?pr=0)-----

SELECT StudentID, FirstName, LastName, Semester1, Semester2, ABS(MarkGrowth) as MarkGrowth
FROM students;

______________________________________________________________________________________________________________________________

-----Fungsi Skalar Matematika - CEILING()(https://academy.dqlab.id/main/livecode/171/336/1607?pr=0)-----

SELECT StudentID, FirstName, LastName, CEILING(Semester1) as Semester1, CEILING(Semester2) as Semester2, MarkGrowth
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Skalar Matematika - FLOOR()(https://academy.dqlab.id/main/livecode/171/336/1608?pr=0)-----

SELECT StudentID, FirstName, LastName, FLOOR(Semester1) as Semester1, FLOOR(Semester2) as Semester2, MarkGrowth
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Skalar Matematika - ROUND()(https://academy.dqlab.id/main/livecode/171/336/1609?pr=0)-----

SELECT StudentID, FirstName, LastName, ROUND(Semester1,1) as Semester1, ROUND(Semester2,0) as Semester2, MarkGrowth
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Skalar Matematika - SQRT( )(https://academy.dqlab.id/main/livecode/171/336/1610?pr=0)-----

SELECT StudentID, FirstName, LastName, SQRT(Semester1) as Semester1, Semester2, MarkGrowth
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Text - CONCAT( )(https://academy.dqlab.id/main/livecode/171/337/1613?pr=)-----

SELECT StudentID, CONCAT(FirstName, LastName) as Name, Semester1,  Semester2, MarkGrowth
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Text - SUBSTRING_INDEX( )(https://academy.dqlab.id/main/livecode/171/337/1634?pr=)-----

SELECT StudentID, SUBSTRING_INDEX(Email, '@',1) as Name
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Text - SUBSTR( )(https://academy.dqlab.id/main/livecode/171/337/1635?pr=)-----

SELECT StudentID, SUBSTR(FirstName, 2, 3) as Initial
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Text - LENGTH( )(https://academy.dqlab.id/main/livecode/171/337/1636?pr=)-----

SELECT StudentID, FirstName, LENGTH(FirstName) as Total_Char
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Text - REPLACE( )(https://academy.dqlab.id/main/livecode/171/337/1637?pr=)-----

SELECT StudentID, Email, REPLACE(Email, 'yahoo', 'gmail') as New_Email
FROM students;

______________________________________________________________________________________________________________________________

-----Tugas Praktek(https://academy.dqlab.id/main/livecode/171/337/1638?pr=)-----

SELECT studentid,
	  UPPER(firstname) AS firstname,
	  LOWER(lastname) AS lastname
FROM
	students;
	  
______________________________________________________________________________________________________________________________

-----Fungsi Aggregate - SUM()(https://academy.dqlab.id/main/livecode/171/340/1640?pr=)-----

SELECT SUM(Semester1) as TOtal_1, SUM(Semester2) as Total_2
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Aggregate - COUNT()(https://academy.dqlab.id/main/livecode/171/340/1641?pr=)-----

SELECT COUNT(FirstName) as Total_Student
FROM students;
______________________________________________________________________________________________________________________________

-----Fungsi Aggregate - AVG( )(https://academy.dqlab.id/main/livecode/171/340/1642?pr=)-----

SELECT AVG(Semester1) as AVG_1, AVG(Semester2) as AVG_2
FROM students;
______________________________________________________________________________________________________________________________

-----Tugas Praktek(https://academy.dqlab.id/main/livecode/171/340/1643?pr=)-----

SELECT 
	MIN(Semester1) AS min1,
	MAX(Semester1) AS max1,
	MIN(Semester2) AS min2,
	MAX(Semester2) AS max2
FROM
	students;
______________________________________________________________________________________________________________________________

-----Group by Single Column(https://academy.dqlab.id/main/livecode/171/340/1645?pr=)-----

SELECT province,
COUNT(DISTINCT order_id) as total_order,
SUM(item_price) as total_price
FROM sales_retail_2019
GROUP BY province;
______________________________________________________________________________________________________________________________

-----Group by Multiple Column(https://academy.dqlab.id/main/livecode/171/340/1646?pr=)-----

SELECT province,
brand,
COUNT(DISTINCT order_id) as total_order,
SUM(item_price) as total_price FROM sales_retail_2019
GROUP BY province, brand;
______________________________________________________________________________________________________________________________

-----Fungsi Aggregate dengan Grouping(https://academy.dqlab.id/main/livecode/171/340/1647?pr=)-----

SELECT province, COUNT(DISTINCT order_id) AS total_unique_order, SUM(item_price) AS revenue FROM sales_retail_2019
GROUP BY province;

______________________________________________________________________________________________________________________________

-----Tugas Praktek(https://academy.dqlab.id/main/livecode/171/340/1650?pr=)-----

SELECT MONTH(order_date) AS order_month, SUM(item_price) AS total_price, 
CASE  
    WHEN sum(item_price) >= 30000000000 THEN 'Target Achieved'
    WHEN sum(item_price) <= 25000000000 THEN 'Less performed'
    ELSE 'Follow Up'
END as remark
FROM sales_retail_2019
GROUP BY MONTH(order_date);

